{
  "port": 7070,
  "ip": "0.0.0.0",
  "protocol": "https",
  "server_name": "hestia.mywebsite.com",
  "root_plugin": "dashboard",
  "page_size": 50,
  "drivers": {
    "disk": {
      "path": "default-drivers/disk.js",
      "auto_register": true,
      "root_only": true,
      "max_total_storage": "2.5gb",
      "max_user_storage": "2.5mb",
      "storage_root_directory": "./hestia-storage"
    },
    "udb": {
      "path": "default-drivers/user-dropbox.js",
      "client_id": "{myclientid}",
      "secret": "{mysecret}"
    }
  },
  "plugins": {
    "dashboard": {
      "path": "default-plugins/dashboard.js"
    },
    "backup": {
      "path": "default-plugins/backup.js",
      "temp_directory": "./hestia-backup"
    }
  }
}
